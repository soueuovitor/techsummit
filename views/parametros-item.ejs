<% include partials/header-backend %>

        <!-- page content -->

        <div class="right_col" role="main">
          <div class="">
            <div class="clearfix"></div>

            <div class="row">
              <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                  <div class="x_title">
                    <h2>Informação do Workshop</h2>

                    <div>
                      <% if (errors.length) { %>  
                        <div class="alert alert-danger">
                          <ul>
                          <% for (var e of errors) { %>
                            <li><%= e.msg %></li>
                          <% }%>
                          </ul>
                        </div>	
                      <% } %>	
                    </div> 
                  
                    <div class="clearfix"></div>
                  </div>
                  <div class="x_content">
                    <form action="/parametros/<%= (isNew) ? 'createParametros' : parametros.idParametros %>" method="post" class="form-horizontal form-label-left" novalidate>

						<!-- nome -->
                      <div class="item form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="nome">Nome <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                          <input class="form-control col-md-7 col-xs-12" data-validate-length-range="6" data-validate-words="2" id="nome" placeholder="Nome do workshop" name="nome" value="<%= parametros.nomeW %>"  required="required" type="text">
                        </div>
                      </div>
					  <!-- data de inico -->
                      <div class="item form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="data">Data de Inicio: <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                          <input type="date" id="dataI" placeholder="Data de inicio do Workshop" name="data" value="<%= parametros.data_inicioW %>" required="required" class="form-control col-md-7 col-xs-12">
                        </div>
                      </div>
					  <!-- data de fim -->
					            <div class="item form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="data">Data de Fim: <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                          <input type="date" id="dataFim" name="dataF" value="<%= parametros.data_fimW %>" required="required" class="form-control col-md-7 col-xs-12">
                        </div>
                      </div>
					  <!-- lotacao -->
                      <div class="item form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="lotacao">Lotação do Workshop <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                          <input type="text" name="lotacao" placeholder="Nº de Bilhetes para venda" pattern="[0-9]" value="<%= parametros.lotacaoW %>" required="required" class="form-control col-md-7 col-xs-12">
                        </div>
                      </div>
					  <!-- local -->
                      <div class="item form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="local">Local do Workshop <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                          <input type="text" id="local" placeholder="Local do workshop" name="local" value="<%= parametros.localW %>" required="required" class="form-control col-md-7 col-xs-12">
                        </div>
                      </div>
					  <!-- preco -->
                      <div class="item form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="preco">Preço por Bilhete <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                          <input type="text" name="preco" id="preco" placeholder="Preço por Bilhete" pattern="[0-9]" value="<%= parametros.precoBilhete %>" required="required" class="form-control col-md-7 col-xs-12">
                        </div>
                      </div>
					  <!-- cache -->
					           <div class="item form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="cache">Cache do Workshop:<span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                          <input type="text" name="cache" id="cache" placeholder="Cache" pattern="[0-9]" value="<%= parametros.cacheS %>" required="required" class="form-control col-md-7 col-xs-12">
                        </div>
                      </div>
					  <!-- botoes -->
                      <div class="ln_solid"></div>
                      <div class="form-group">
                        <div class="col-md-6 col-md-offset-3">
                          <button type="submit" class="btn btn-primary onclick="window.open('/parametros','_self')"">Cancel</button>
                        </div>
                      </div>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- /page content -->
<% include partials/footer-backend %>